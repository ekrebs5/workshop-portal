<%= form_for @request, :html => {:class => "form-horizontal request"} do |f| %>

    <%= render partial: "shared/error_message", locals: {entity: @request} %>

    <h3><%=t 'requests.workshop_information' %></h3>

    <div class="form-group">
      <%= f.label :topic_of_workshop, :class => 'control-label col-lg-2 required' %>
      <div class="col-lg-10">
        <%= f.text_field :topic_of_workshop, :class => 'form-control', :placeholder => I18n.t('requests.hints.please_enter_two_topics') %>
        <%= f.error_span(:topic_of_workshop) %>
      </div>
    </div>

    <% [:time_period, :number_of_participants].each do |attribute_name| %>
        <div class="form-group">
          <%= f.label attribute_name, :class => 'control-label col-lg-2 ' %>
          <div class="col-lg-10">
            <%= f.text_field attribute_name, :class => 'form-control' %>
            <%= f.error_span(attribute_name) %>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label 'previous_knowledge_label', t('requests.previous_knowledge'), :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :number_of_participants_with_previous_knowledge, :class => 'form-control' %>
        <span class="help-block"> <%= t('requests.hints.previous_knowledge') %> </span>
        <%= f.error_span(:number_of_participants_with_previous_knowledge) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :grade, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :grade, :class => 'form-control' %>
        <%= f.error_span(:grade) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :knowledge_level, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_area :knowledge_level, :class => 'form-control', :placeholder => I18n.t('requests.hints.please_be_descriptive') %>
        <%= f.error_span(:knowledge_level) %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :annotations, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_area :annotations, :class => 'form-control' %>
        <%= f.error_span(:annotations) %>
      </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-lg-offset-2">
            <%= f.label 'campus_tour_label', I18n.t('requests.campus_tour.long'), :class => 'control-label ' %>
            <%= f.check_box :campus_tour, :class => 'checkbox' %>
            <%= f.error_span(:campus_tour) %>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-10 col-lg-offset-2">
            <%= f.label 'study_info_label', I18n.t('requests.study_info.long'), :class => 'control-label ' %>
            <%= f.check_box :study_info, :class => 'checkbox' %>
            <%= f.error_span(:study_info) %>
        </div>
    </div>

    <h3><%=t 'requests.teacher_information' %></h3>

    <div class="form-group">
      <div class="btn-group col-lg-10 col-lg-offset-2" data-toggle="buttons">
        <% Request.form_of_addresses.keys.each do |key| %>
            <label class="btn btn-default <%= 'active' if @request.form_of_address == key %>">
              <%= f.radio_button :form_of_address, key %>
              <%= I18n.t :"requests.form_of_addresses.#{key}" %>
            </label>
        <% end %>
      </div>
      <div class="col-lg-offset-2 col-lg-10">
          <%= f.error_span(:form_of_address) %>
      </div>
    </div>

    <% [:first_name, :last_name, :phone_number, :email].each do |attribute_name| %>
        <div class="form-group">
          <%= f.label attribute_name, :class => 'control-label col-lg-2 required' %>
          <div class="col-lg-10">
            <%= f.text_field attribute_name, :class => 'form-control' %>
            <%= f.error_span(attribute_name) %>
          </div>
        </div>
    <% end %>

    <h3><%=t 'requests.school_information' %></h3>

    <% [:school_street, :school_zip_code_city].each do |attribute_name| %>
        <div class="form-group">
          <%= f.label attribute_name, :class => 'control-label col-lg-2 required' %>
          <div class="col-lg-10">
            <%= f.text_field attribute_name, :class => 'form-control' %>
            <%= f.error_span(attribute_name) %>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
      </div>
    </div>
<% end %>
